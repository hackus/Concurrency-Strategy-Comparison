<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="">
    <Appenders>
        <!-- Asynchronous file appender -->
        <Async name="AsyncFile">
            <AppenderRef ref="FileAppender"/>
        </Async>

        <File name="FileAppender" fileName="logs/db-performance.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Console output (still async for non-blocking behavior) -->
        <Async name="AsyncConsole">
            <AppenderRef ref="ConsoleAppender"/>
        </Async>

        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p %c{1} - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Application package -->
        <Logger name="com.example.concurrency" level="info" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- Root logger -->
        <Root level="warn">
            <AppenderRef ref="AsyncConsole"/>
        </Root>
    </Loggers>
</Configuration>
